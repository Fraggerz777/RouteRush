<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna tombol -->
    <solid android:color="#6200EE" />

    <!-- Radius sudut tombol -->
    <corners android:radius="10dp" />

    <!-- Padding tombol (opsional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Border tombol (opsional) -->
    <stroke
        android:width="1dp"
        android:color="#3700B3" /> <!-- Ganti warna sesuai kebutuhan -->
</shape>